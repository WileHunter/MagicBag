<Window x:Class="WpfApp3.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="操作确认"
        Height="Auto" Width="280"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F0F0F0">
    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Grid.Row="0"
                       FontSize="15" FontWeight="Bold" Foreground="#333333"
                       Margin="0,0,0,10" TextAlignment="Center"/>

            <TextBlock x:Name="MessageTextBlock" Grid.Row="1"
                       FontSize="12" Foreground="#555555"
                       Margin="0,0,0,15" TextWrapping="Wrap"
                       Visibility="Collapsed"/>

            <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="0,0,0,15">
                <TextBox x:Name="Boxx"
                         Height="30" Padding="5"
                         FontSize="14" Foreground="#333333"
                         VerticalContentAlignment="Center"
                         BorderThickness="0"/>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Border CornerRadius="3" Margin="0,0,10,0">
                    <Button x:Name="Done_Button" Content="确定" IsDefault="True"
                            Click="Done_Button_Click"
                            Width="50" Height="27" FontSize="12"
                            Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                            Cursor="Hand"/>
                </Border>
                <Border CornerRadius="3">
                    <Button Content="取消" IsCancel="True"
                            Click="CancelButton_Click"
                            Width="50" Height="27" FontSize="12"
                            Background="#E0E0E0" Foreground="#333333" BorderBrush="#CCCCCC"
                            Cursor="Hand"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>