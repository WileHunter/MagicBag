<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Icon="/images/icons8.png"
        Title="MagicBag" Height="422" Width="630"
        Loaded="MainWindow_Loaded">
    <Grid>
        <TabControl x:Name="MainTabControl" Margin="0" Style="{StaticResource TabControlCapsuleSolid}">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="images/tool.png" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="工具集"/>
                    </StackPanel>
                </TabItem.Header>
                <local:ToolsView x:Name="ToolsViewControl" />
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="images/notebook.png" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="笔记本"/>
                    </StackPanel>
                </TabItem.Header>
                <local:NotebookView/>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="images/sqlite.png" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="数据库"/>
                    </StackPanel>
                </TabItem.Header>
                <local:DatabaseView x:Name="DatabaseViewControl" />
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="images/regard.png" Width="18" Height="18" Margin="0,0,5,0"/>
                        <TextBlock Text="关于"/>
                    </StackPanel>
                </TabItem.Header>
                <local:AboutView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>